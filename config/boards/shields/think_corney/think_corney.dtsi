/*
 * ThinkCorney (nice!nano) - generated from Ergogen config
 */

#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,physical-layout = &think_corney_layout;
    };

    think_corney_layout: physical_layout_0 {
        compatible = "zmk,physical-layout";
        display-name = "ThinkCorney";
        kscan = <&kscan0>;
        transform = <&default_transform>;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <12>;
        rows = <5>;
        /*
         * Physical matrix: 5 rows x 6 cols per half.
         * Left half uses cols 0-5, right half uses cols 6-11 (col-offset=6).
         * Thumbs are on row 4, cols 3-5 on each half.
         *
         * Logical key positions count: 54 (24 + 3 thumbs per half).
         */
                map = <
            /* Row 0 (top) */
            RC(0,6)  RC(0,7)  RC(0,8)  RC(0,9)  RC(0,10) RC(0,11)  RC(0,0)  RC(0,1)  RC(0,2)  RC(0,3)  RC(0,4)  RC(0,5)
            /* Row 1 */
            RC(1,6)  RC(1,7)  RC(1,8)  RC(1,9)  RC(1,10) RC(1,11)  RC(1,0)  RC(1,1)  RC(1,2)  RC(1,3)  RC(1,4)  RC(1,5)
            /* Row 2 */
            RC(2,6)  RC(2,7)  RC(2,8)  RC(2,9)  RC(2,10) RC(2,11)  RC(2,0)  RC(2,1)  RC(2,2)  RC(2,3)  RC(2,4)  RC(2,5)
            /* Row 3 (bottom alpha) */
            RC(3,6)  RC(3,7)  RC(3,8)  RC(3,9)  RC(3,10) RC(3,11)  RC(3,0)  RC(3,1)  RC(3,2)  RC(3,3)  RC(3,4)  RC(3,5)
            /* Row 4 (thumbs: left C3..C5 -> cols 9..11, right C3..C5 -> cols 3..5) */
            RC(4,9)  RC(4,10) RC(4,11) RC(4,3)  RC(4,4)  RC(4,5)
        >;
    };


    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        wakeup-source;
        diode-direction = "col2row";

        /* Rows: R0..R4 = P8, P4, P5, P6, P7 */
        row-gpios = <&pro_micro 8 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
                    <&pro_micro 4 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
                    <&pro_micro 5 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
                    <&pro_micro 6 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
                    <&pro_micro 7 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>;
        /* Cols are set per-half in *_left.overlay and *_right.overlay */
    };
};
